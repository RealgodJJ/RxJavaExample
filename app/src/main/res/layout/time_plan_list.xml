<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="80dp"
    android:layout_marginEnd="5dp"
    android:layout_marginStart="5dp"
    android:background="@color/time_plan_item_background"
    android:orientation="horizontal">

    <ImageView
        android:id="@+id/iv_list_icon"
        android:layout_width="80dp"
        android:layout_height="80dp"
        android:src="@drawable/add_suceess"
        tools:ignore="ContentDescription" />

    <TextView
        android:id="@+id/tv_list_title"
        android:layout_width="170dp"
        android:layout_height="40dp"
        android:layout_marginStart="5dp"
        android:layout_toEndOf="@id/iv_list_icon"
        android:gravity="center_vertical"
        android:textSize="20sp"
        tools:text="@string/add_plan_title" />

    <TextView
        android:id="@+id/tv_list_time_location"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:layout_toEndOf="@id/tv_list_title"
        android:gravity="center"
        tools:text="@string/add_plan_time_location" />

    <View
        android:id="@+id/v_split"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_centerVertical="true"
        android:layout_marginStart="5dp"
        android:layout_toEndOf="@id/iv_list_icon"
        android:background="@color/grey" />

    <TextView
        android:id="@+id/tv_list_context"
        android:layout_width="230dp"
        android:layout_height="40dp"
        android:layout_below="@id/tv_list_title"
        android:layout_marginStart="5dp"
        android:layout_toEndOf="@id/iv_list_icon"
        android:ellipsize="marquee"
        android:focusable="true"
        android:gravity="center_vertical"
        android:marqueeRepeatLimit="marquee_forever"
        android:scrollHorizontally="true"
        android:singleLine="true"
        android:textSize="15sp"
        tools:text="@string/add_plan_context" />

    <ImageView
        android:id="@+id/iv_list_is_all_day"
        android:layout_below="@id/tv_list_time_location"
        android:layout_marginTop="5dp"
        android:layout_width="30dp"
        android:layout_height="30dp"
        android:layout_toEndOf="@id/tv_list_context"
        android:gravity="center"
        android:scaleType="centerInside"
        tools:background="@drawable/add_suceess"
        tools:ignore="ContentDescription" />

</RelativeLayout>
